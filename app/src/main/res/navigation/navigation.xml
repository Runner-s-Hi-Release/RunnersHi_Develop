<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/splash_fragment">

    <fragment
        android:id="@+id/splash_fragment"
        android:name="com.example.runnershi_develop.SplashFragment"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/action_splashFragment_to_homeViewPagerFragment"
            app:destination="@id/home_view_pager_fragment"
            app:popUpTo="@id/splash_fragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_onBoardFragment"
            app:destination="@id/on_board_fragment"
            app:popUpTo="@id/splash_fragment"
            app:popUpToInclusive="true" />

    </fragment>
    <fragment
        android:id="@+id/on_board_fragment"
        android:name="com.example.runnershi_develop.OnBoardFragment"
        tools:layout="@layout/fragment_on_board">
        <action
            android:id="@+id/action_onBoardFragment_to_homeViewPagerFragment"
            app:destination="@id/home_view_pager_fragment"
            app:popUpTo="@id/on_board_fragment"
            app:popUpToInclusive="true" />

    </fragment>
    <fragment
        android:id="@+id/matching_fragment"
        android:name="com.example.runnershi_develop.MatchingFragment"
        tools:layout="@layout/fragment_matching">
        <argument
            android:name="RunningStart"
            app:argType="com.example.runnershi_develop.data.RunningStart"/>
    </fragment>

    <fragment
        android:id="@+id/matching_goal_fragment"
        android:name="com.example.runnershi_develop.MatchingGoalFragment"
        tools:layout="@layout/fragment_matching_goal">
        <action
            android:id="@+id/action_matching_goal_fragment_to_matching_gender_fragment"
            app:destination="@id/matching_gender_fragment"
            app:popUpTo="@id/matching_goal_fragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/matching_gender_fragment"
        android:name="com.example.runnershi_develop.MatchingGenderFragment"
        tools:layout="@layout/fragment_matching_gender">
        <argument
            android:name="goal"
            app:argType="integer"/>
        <action
            android:id="@+id/action_matching_gender_fragment_to_matching_fragment"
            app:destination="@id/matching_fragment"
            app:popUpTo="@id/matching_gender_fragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/home_view_pager_fragment"
        android:name="com.example.runnershi_develop.HomeViewPagerFragment"
        tools:layout="@layout/fragment_view_pager">

        <action
            android:id="@+id/action_view_pager_fragment_to_fragment_badge_detail"
            app:destination="@id/badge_detail_fragment" />
        <action
            android:id="@+id/action_home_view_pager_fragment_to_runningDetailFragment"
            app:destination="@id/runningDetailFragment" />
        <action
            android:id="@+id/action_home_view_pager_fragment_to_matching_goal_fragment"
            app:destination="@id/matching_goal_fragment" />

    </fragment>

    <fragment
        android:id="@+id/badge_detail_fragment"
        android:name="com.example.runnershi_develop.BadgeDetailFragment"
        tools:layout="@layout/fragment_badge_detail">

        <argument
            android:name="badge"
            app:argType="com.example.runnershi_develop.data.Badge"/>

    </fragment>
    <fragment
        android:id="@+id/runningDetailFragment"
        android:name="com.example.runnershi_develop.RunningDetailFragment"
        android:label="fragment_running_detail"
        tools:layout="@layout/fragment_running_detail">
        <argument
            android:name="running"
            app:argType="com.example.runnershi_develop.data.Running"
            />
    </fragment>

</navigation>