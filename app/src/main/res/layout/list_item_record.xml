<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="running"
            type="com.example.runnershi_develop.data.Running" />

        <variable
            name="clickListener"
            type="com.example.runnershi_develop.adapters.RecordAdapter.OnClickListener" />
    </data>


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="@{() -> clickListener.onClick(running)}"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgv_background"
                android:layout_width="170dp"
                android:layout_height="170dp"

                app:backgroundImage="@{running.result}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/blueline___recbadgefragment_winnerrecord" />


            <TextView
                android:id="@+id/tv_rec_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="28dp"
                android:fontFamily="@font/nanumsquarer"
                android:lineSpacingExtra="8sp"
                android:textColor="@color/brownish_grey"
                android:textSize="12sp"
                app:date="@{running.date}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="2020.06.17" />

            <TextView
                android:id="@+id/tv_rec_distacne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/notosans_blackitalic"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="10sp"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:distance="@{running.distance}"
                app:layout_constraintStart_toStartOf="@+id/tv_rec_date"
                app:layout_constraintTop_toBottomOf="@+id/tv_rec_date"
                tools:text="4.43" />

            <TextView
                android:id="@+id/tv_rec_distance_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquarer"
                android:lineSpacingExtra="8sp"
                android:text="킬로미터"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/tv_rec_distacne"
                app:layout_constraintTop_toBottomOf="@+id/tv_rec_distacne" />

            <TextView
                android:id="@+id/tv_rec_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/notosans_blackitalic"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="2sp"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="@+id/tv_rec_distance_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_rec_distance_title"
                app:time="@{running.time}"
                tools:text="30:00" />

            <TextView
                android:id="@+id/tv_rec_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquarer"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="8sp"
                android:text="러닝시간"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/tv_rec_time_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_rec_time_title" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>
